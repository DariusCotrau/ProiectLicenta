{
  "expo": {
    "name": "MindfulTime",
    "slug": "MindfulTime",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#6200EE"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mindfultime.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Această aplicație necesită acces la cameră pentru a verifica completarea activităților mindfulness prin fotografii.",
        "NSPhotoLibraryUsageDescription": "Această aplicație necesită acces la galeria foto pentru a salva fotografiile de verificare."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.mindfultime.app",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "PACKAGE_USAGE_STATS"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Permite aplicației să folosească camera pentru verificarea activităților."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Permite aplicației să acceseze fotografiile tale."
        }
      ]
    ]
  }
}
